{
  "kind": "collectionType",
  "collectionName": "subcategoria_productos",
  "info": {
    "singularName": "subcategoria-producto",
    "pluralName": "subcategoria-productos",
    "displayName": "Subcategoría Producto",
    "description": "Subcategorías para organizar los productos dentro de categorías"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "nombre": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "slug": {
      "type": "uid",
      "targetField": "nombre",
      "required": true
    },
    "descripcion": {
      "type": "text",
      "required": false,
      "maxLength": 300
    },
    "orden": {
      "type": "integer",
      "required": false,
      "default": 0
    },
    "activa": {
      "type": "boolean",
      "default": true,
      "required": false
    },
    "categoria": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::categoria-producto.categoria-producto",
      "inversedBy": "subcategorias"
    },
    "productos": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::producto.producto",
      "mappedBy": "subcategoria"
    }
  }
}

